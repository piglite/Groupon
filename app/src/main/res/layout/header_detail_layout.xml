<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffffff"
    >
    
    <ImageView 
        android:id="@+id/iv_detail_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yy_calendar_icon_previous"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />
     <ImageView 
         android:id="@+id/iv_detail_header_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_detail_header_more"
        android:src="@drawable/ic_action_favorite_off_normal"
        />
      <ImageView 
         android:id="@+id/iv_detail_header_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_detail_header_star"
        android:src="@drawable/ic_action_share_normal"
        />

      <ImageView
          android:id="@+id/iv_detail_header_more"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="5dp"
          android:src="@drawable/title_icon_more_u" />

</RelativeLayout>