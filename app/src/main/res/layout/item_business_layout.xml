<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_business_item"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/bucket_no_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_business_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="XXXXX"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_business_item_rating"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
				android:layout_gravity = "center_vertical"
                android:src="@drawable/movie_star20"

                />

            <TextView
                android:id="@+id/tv_business_item_avg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="￥100元/人"
                android:textColor="#ff6e6e6e"
				android:layout_gravity = "center_vertical"
                android:textSize="14sp"
				/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_business_item_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="三里屯 火锅"
                android:singleLine="true"
                android:textSize="12sp" />
            
            <TextView 
                android:id="@+id/tv_business_item_distance"
                  android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text="300米"
                android:singleLine="true"
                android:textSize="12sp"
                
                
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>